
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body text-center">
        <i class="fab fa-hire-a-helper fa-5x"></i>
            <div class="Hire-me">
                <p>HIRE-<span>ME</span></p>
            </div>
        <h1 class="text-center mb-3">
          
          <i class="fas fa-user-plus"></i> Post Job
        </h1>
        <% include ./partials/messages %>
        
        <form action="/company/post-job" method="POST">
          <div class="form-group">
            <label for="post">Job Post</label>
            <input
              type="text"
              id="post"
              name="post"
              class="form-control"
              placeholder="Enter Post"
              value="<%= typeof post != 'undefined' ? post : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="responsibilities">Job Responsibilities</label>
            <input
              type="text"
              id="responsibilities"
              name="responsibilities"
              class="form-control"
              placeholder="Enter Job Responsibilities"
              value="<%= typeof responsibilities != 'undefined' ? responsibilities : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="deadline">Deadline</label>
            <input
              type="date"
              id="deadline"
              name="deadline"
              class="form-control"
              
              value="<%= typeof deadline != 'undefined' ? deadline : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="nov">Number of Vacancy</label>
            <input
              type="number"
              id="nov"
              name="nov"
              class="form-control"
              placeholder="Enter Number of Vacancies"
              value="<%= typeof nov != 'undefined' ? nov : '' %>"
            />
          </div>        
  
          


          <button type="submit" class="btn btn-secondary btn-block">
            Post Job
          </button><br>
        <div class="logout">
            <p><a href="/users/logout" class="btn btn-primary btn-block">Logout</a></p>
        </div>
        </form>
        
       
      </div>
    </div>
  </div>
  